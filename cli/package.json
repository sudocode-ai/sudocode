{
  "name": "@sudocode-ai/cli",
  "version": "0.1.0",
  "description": "Git-native spec and issue management CLI for AI-assisted software development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sudocode": "./dist/cli.js",
    "sdc": "./dist/cli.js"
  },
  "scripts": {
    "build": "node build.js",
    "build:dev": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:schema": "tsc && node dist/test-schema.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "sudocode",
    "cli",
    "specs",
    "issues",
    "ai-assisted-development",
    "git-native",
    "project-management"
  ],
  "author": "sudocode AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sudocode-ai/sudocode.git",
    "directory": "cli"
  },
  "homepage": "https://sudocode.ai",
  "bugs": {
    "url": "https://github.com/sudocode-ai/sudocode/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sudocode-ai/types": "^0.1.0",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "gray-matter": "^4.0.3",
    "vite": "7.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20.10.6",
    "esbuild": "^0.24.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.map"
  ]
}
