{
  "name": "@sudocode-ai/desktop",
  "version": "0.1.9",
  "description": "Sudocode desktop application - Electron shell for local development",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build && electron .",
    "dev:watch": "tsc --watch",
    "build": "tsc",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist release"
  },
  "author": "sudocode AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudocode-ai/sudocode.git",
    "directory": "electron"
  },
  "homepage": "https://sudocode.ai",
  "dependencies": {
    "@sudocode-ai/local-server": "^0.1.9",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/node": "^20.11.19",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.3.3"
  }
}
