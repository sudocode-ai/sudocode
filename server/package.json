{
  "name": "@sudocode/server",
  "version": "0.1.0",
  "description": "Local backend server for sudocode - provides REST API and WebSocket endpoints",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sudocode-server": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["sudocode", "server", "express", "websocket"],
  "author": "sudocode AI",
  "dependencies": {
    "@sudocode/types": "^0.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.19",
    "@types/better-sqlite3": "^7.6.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "files": ["dist/**/*", ".env.example"]
}
