{
  "name": "@sudocode-ai/local-server",
  "version": "0.1.17",
  "description": "Local backend server for sudocode - provides REST API and WebSocket endpoints",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sudocode-server": "dist/cli.js",
    "sudocode-workflow-mcp": "dist/workflow/mcp/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && chmod +x dist/cli.js dist/workflow/mcp/index.js && node scripts/copy-frontend.js",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test vitest",
    "test:e2e": "RUN_E2E_TESTS=true NODE_ENV=test vitest --run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "sudocode",
    "server",
    "api",
    "backend"
  ],
  "author": "sudocode AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudocode-ai/sudocode.git",
    "directory": "server"
  },
  "homepage": "https://sudocode.ai",
  "bugs": {
    "url": "https://github.com/sudocode-ai/sudocode/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@ag-ui/core": "^0.0.39",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.24.1",
    "@sudocode-ai/cli": "^0.1.17",
    "@sudocode-ai/types": "^0.1.17",
    "@types/ws": "^8.18.1",
    "agent-execution-engine": "^0.0.25",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^10.4.5",
    "node-fetch": "^2.7.0",
    "which": "^6.0.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/iarna__toml": "^2.0.5",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "@types/which": "^3.0.4",
    "esbuild": "^0.27.0",
    "supertest": "^7.1.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*"
  ]
}
