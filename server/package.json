{
  "name": "@sudocode/server",
  "version": "0.1.0",
  "description": "Local backend server for sudocode - provides REST API and WebSocket endpoints",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sudocode-server": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "test": "npm run build && NODE_ENV=test node --test dist/**/*.test.js",
    "test:verbose": "npm run build && node --test dist/**/*.test.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "sudocode",
    "server",
    "express",
    "websocket"
  ],
  "author": "sudocode AI",
  "dependencies": {
    "@sudocode/cli": "^0.1.0",
    "@sudocode/types": "^0.1.0",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/**/*"
  ]
}
