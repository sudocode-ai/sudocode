# Port to run the server on
PORT=3000

# Node environment (development/production)
NODE_ENV=development

# Path to sudocode directory
# Default: .sudocode in the current working directory
# SUDOCODE_DIR=/path/to/project/.sudocode

# Path to the SQLite database
# Default: SUDOCODE_DIR/cache.db
SUDOCODE_DB_PATH=

# Enable/disable file watcher
# Default: true (enabled)
WATCH=true

# File watcher debounce delay in milliseconds
# Default: 2000 (2 seconds)
WATCH_DEBOUNCE=2000
